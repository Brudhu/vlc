{
	"name": "@richienb/vlc",
	"version": "0.0.0",
	"description": "An interface to VLC Media Player.",
	"repository": "https://github.com/Richienb/vlc.git",
	"author": "Richie Bendall <richiebendall@gmail.com>",
	"license": "MIT",
	"main": "dist/index.js",
	"files": [
		"src/**/*",
		"dist/**/*"
	],
	"engines": {
		"node": ">=10"
	},
	"scripts": {
		"docs": "typedoc",
		"build": "tsc && yarn docs",
		"dev": "yarn tsc --watch",
		"lint": "xo",
		"test": "yarn lint && ava"
	},
	"keywords": [
		"vlc",
		"media",
		"player",
		"interface",
		"api",
		"http",
		"interface",
		"binary",
		"download",
		"play"
	],
	"dependencies": {
		"execa": "^4.0.0",
		"get-port": "^5.1.1",
		"got": "^10.6.0",
		"internal-ip": "^5.0.0",
		"unique-string": "^2.0.0",
		"url-join": "^4.0.1",
		"vlc-static": "^1.0.2"
	},
	"devDependencies": {
		"@types/url-join": "^4.0.0",
		"ava": "^3.3.0",
		"eslint-config-richienb": "^0.3.0",
		"ts-node": "^8.6.2",
		"typedoc": "^0.16.10",
		"typescript": "^3.8.2",
		"xo": "^0.25.3"
	},
	"resolutions": {
		"eslint": "^6.8.0"
	},
	"xo": {
		"extends": "richienb/ts",
		"ignores": [
			"vlc-3.0.8/**"
		]
	},
	"ava": {
		"extensions": [
			"ts"
		],
		"require": [
			"ts-node/register"
		]
	}
}
